<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_history"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />
        
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_description"
        android:textColor="@color/colorText"
        android:layout_marginBottom="16dp" />
        
    <com.example.demoapp.CalendarHeatmapView
        android:id="@+id/heatmapView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp" />
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/pomodoro_indicator"
                android:layout_marginEnd="8dp" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pomodoro"
                android:textColor="@color/colorText" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/short_break_indicator"
                android:layout_marginEnd="8dp" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/short_break"
                android:textColor="@color/colorText" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/long_break_indicator"
                android:layout_marginEnd="8dp" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/long_break"
                android:textColor="@color/colorText" />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        
        <TextView
            android:id="@+id/pomodoroCountTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pomodoro_count"
            android:textColor="@color/colorText"
            android:gravity="center" />
            
        <TextView
            android:id="@+id/shortBreakCountTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/short_break_count"
            android:textColor="@color/colorText"
            android:gravity="center" />
            
        <TextView
            android:id="@+id/longBreakCountTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/long_break_count"
            android:textColor="@color/colorText"
            android:gravity="center" />
    </LinearLayout>
    
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:background="@drawable/button_background"
        android:textColor="@color/colorWhite" />

</LinearLayout> 